<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/hh_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            tools:ignore="ContentDescription" />

        <!--name-->
        <TextView
            android:id="@+id/hh_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/hh_image"
            android:layout_marginTop="24dp"
            style="@style/TextStyle20"
            android:drawableEnd="@drawable/ic_whatshot_black_24dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            />

        <!--message-->
        <TextView
            android:id="@+id/hh_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/hh_name"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            style="@style/TextStyle14Login"
            android:textStyle="bold"
            android:textColor="@color/black90"
            android:gravity="center_horizontal"
            />


    </RelativeLayout>

    <Button
        android:id="@+id/hh_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_alignParentBottom="true"
        android:background="@color/lightGreen"
        />

</RelativeLayout>