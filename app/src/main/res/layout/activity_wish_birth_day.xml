<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WishBirthDay">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Lovenders wishes you a very happy birthday. May your day be filled with lots of love and happiness."
        android:layout_marginTop="42dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"
        style="@style/TextStyle14Login"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/carterone"
        android:textColor="#53D2C5"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/wb_image"
        android:layout_width="200dp"
        android:layout_height="176dp"
        android:layout_centerInParent="true"
        android:background="@drawable/birthday"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/wb_name"
        android:layout_below="@+id/wb_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/happy_birthday"
        android:textColor="#53D2C5"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:fontFamily="@font/pacifico"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        />

</RelativeLayout>