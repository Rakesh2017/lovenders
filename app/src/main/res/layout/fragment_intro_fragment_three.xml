<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".IntroFragmentThree">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        >


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="68dp"
       >

       <!--about-->
       <android.support.v7.widget.CardView
           android:id="@+id/ft_about_cv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           app:cardBackgroundColor="@color/white"
           app:cardCornerRadius="3dp"
           app:cardElevation="@dimen/elevation"
           android:layout_marginTop="24dp"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               android:padding="16dp">


               <TextView
                   android:id="@+id/ft_about_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/about"
                   style="@style/TextStyle14Login"
                   android:textColor="@color/facebookBlue"
                   android:textStyle="normal"
                   />
               <EditText
                   android:id="@+id/ft_about_et"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/edit_profile_edit_box_background"
                   android:hint="@string/all_about_me"
                   android:layout_below="@+id/ft_about_tv"
                   android:padding="@dimen/text_view_padding"
                   android:drawableStart="@drawable/ic_edit"
                   android:drawablePadding="12dp"
                   android:paddingStart="12dp"
                   style="@style/TextStyle16"
                   android:layout_marginTop="7dp"
                   android:textColor="@color/topBarColor"
                   android:inputType="textMultiLine|textCapWords"
                   android:maxLines="3"
                   android:maxLength="150"
                   android:textStyle="normal"
                   android:textColorHint="@color/black50"
                   tools:ignore="Autofill,RtlSymmetry" />

           </RelativeLayout>
       </android.support.v7.widget.CardView>

       <!--school\university-->
       <android.support.v7.widget.CardView
           android:id="@+id/ft_school_cv"
           android:layout_below="@+id/ft_about_cv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           app:cardBackgroundColor="@color/white"
           app:cardCornerRadius="3dp"
           app:cardElevation="@dimen/elevation"
           android:layout_marginTop="24dp"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               android:padding="16dp">

               <TextView
                   android:id="@+id/ft_school_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/school_university"
                   style="@style/TextStyle14Login"
                   android:textColor="@color/facebookBlue"
                   android:textStyle="normal"
                   />
               <EditText
                   android:id="@+id/ft_school_et"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/edit_profile_edit_box_background"
                   android:hint="@string/your_school_university_name"
                   android:layout_below="@+id/ft_school_tv"
                   android:padding="@dimen/text_view_padding"
                   android:drawableStart="@drawable/ic_school"
                   android:drawablePadding="12dp"
                   style="@style/TextStyle16"
                   android:layout_marginTop="8dp"
                   android:textColor="@color/topBarColor"
                   android:inputType="textCapWords"
                   android:maxLines="1"
                   android:maxLength="50"
                   android:textColorHint="@color/black50"
                   android:textStyle="normal"
                   />
           </RelativeLayout>
       </android.support.v7.widget.CardView>

       <!--religion-->
       <android.support.v7.widget.CardView
           android:id="@+id/ft_religion_cv"
           android:layout_below="@+id/ft_school_cv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           app:cardBackgroundColor="@color/white"
           app:cardCornerRadius="3dp"
           app:cardElevation="@dimen/elevation"
           android:layout_marginTop="24dp"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               android:padding="16dp">

               <TextView
                   android:id="@+id/ft_religion_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/religion"
                   style="@style/TextStyle14Login"
                   android:textColor="@color/facebookBlue"
                   android:textStyle="normal"
                   />
               <EditText
                   android:id="@+id/ft_religion_et"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/ft_religion_tv"
                   android:paddingStart="@dimen/text_view_padding"
                   android:paddingTop="@dimen/text_view_padding"
                   android:paddingBottom="@dimen/text_view_padding"
                   android:drawableStart="@drawable/ic_religion"
                   style="@style/TextStyle16"
                   android:layout_marginTop="8dp"
                   android:textColor="@color/facebookBlue"
                   android:inputType="textCapWords"
                   android:textColorHint="@color/facebookBlue50"
                   android:textStyle="normal"
                   android:clickable="false"
                   android:focusable="false"
                   android:layout_alignBottom="@+id/ft_religion_spinner"
                   android:editable="false"
                   tools:ignore="RtlSymmetry" />
               <!--spinner-->
               <com.jaredrummler.materialspinner.MaterialSpinner
                   android:id="@+id/ft_religion_spinner"
                   android:layout_below="@+id/ft_religion_tv"
                   android:textColor="@color/facebookBlue"
                   android:textStyle="normal"
                   android:layout_toEndOf="@+id/ft_religion_et"
                   app:ms_hide_arrow="false"
                   style="@style/TextStyle16"
                   app:ms_background_color="@color/white"
                   app:ms_hint="Select Religion"
                   app:ms_hint_color="@color/black50"
                   app:ms_text_color="@color/topBarColor"
                   app:ms_dropdown_max_height="350dp"
                   app:ms_dropdown_height="wrap_content"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="8dp"
                   />
           </RelativeLayout>
       </android.support.v7.widget.CardView>

       <!--zodiac-->
       <android.support.v7.widget.CardView
           android:layout_below="@+id/ft_religion_cv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           app:cardBackgroundColor="@color/white"
           app:cardCornerRadius="3dp"
           app:cardElevation="@dimen/elevation"
           android:layout_marginTop="24dp"
           android:layout_marginBottom="12dp"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               android:padding="16dp">

               <TextView
                   android:id="@+id/ft_zodiac_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/zodiac"
                   style="@style/TextStyle14Login"
                   android:textColor="@color/facebookBlue"
                   android:textStyle="normal"
                   />
               <EditText
                   android:id="@+id/ft_zodiac_et"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/ft_zodiac_tv"
                   android:paddingStart="@dimen/text_view_padding"
                   android:paddingTop="@dimen/text_view_padding"
                   android:paddingBottom="@dimen/text_view_padding"
                   android:drawableStart="@drawable/ic_zodiac"
                   style="@style/TextStyle16"
                   android:layout_marginTop="8dp"
                   android:textColor="@color/facebookBlue"
                   android:inputType="textCapWords"
                   android:textColorHint="@color/facebookBlue50"
                   android:textStyle="normal"
                   android:clickable="false"
                   android:focusable="false"
                   android:layout_alignBottom="@+id/ft_zodiac_spinner"
                   android:editable="false"
                   tools:ignore="Autofill,RtlSymmetry" />
               <!--spinner-->
               <com.jaredrummler.materialspinner.MaterialSpinner
                   android:id="@+id/ft_zodiac_spinner"
                   android:layout_below="@+id/ft_zodiac_tv"
                   android:textColor="@color/facebookBlue"
                   android:textStyle="normal"
                   android:layout_toEndOf="@+id/ft_zodiac_et"
                   app:ms_hide_arrow="false"
                   style="@style/TextStyle16"
                   app:ms_background_color="@color/white"
                   app:ms_hint="Your Zodiac"
                   app:ms_hint_color="@color/black50"
                   app:ms_text_color="@color/topBarColor"
                   app:ms_dropdown_max_height="350dp"
                   app:ms_dropdown_height="wrap_content"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="8dp"
                   />
           </RelativeLayout>
       </android.support.v7.widget.CardView>

   </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <!--next button-->
    <ImageButton
        android:id="@+id/ft_next_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_next_blue"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="12dp"
        android:elevation="11dp"
        android:src="@drawable/ripple_to_buttons_black"
        tools:ignore="ContentDescription" />

</RelativeLayout>